                <th>@Model.Neto(Model.Semanal(Model.Base13), Model.Comisiones(Model.Ventas13), (Model.Deducciones(Model.Semanal(Model.Base13), Model.Comisiones(Model.Ventas13))))</th>
            </tr>
            <tr>
                <th>David Hurtado</th>
                <th>@Model.Semanal(Model.Base14)</th>
                <th>@Model.Comisiones(Model.Ventas14)</th>
                <th>@Model.Deducciones(Model.Semanal(Model.Base14), Model.Comisiones(Model.Ventas14))</th>
                <th>@Model.Neto(Model.Semanal(Model.Base14), Model.Comisiones(Model.Ventas14), (Model.Deducciones(Model.Semanal(Model.Base14), Model.Comisiones(Model.Ventas14))))</th>
            </tr>
            <tr>
                <th>Susana Araya</th>
                <th>@Model.Semanal(Model.Base15)</th>
                <th>@Model.Comisiones(Model.Ventas15)</th>
                <th>@Model.Deducciones(Model.Semanal(Model.Base15), Model.Comisiones(Model.Ventas15))</th>
                <th>@Model.Neto(Model.Semanal(Model.Base15), Model.Comisiones(Model.Ventas15), (Model.Deducciones(Model.Semanal(Model.Base15), Model.Comisiones(Model.Ventas15))))</th>
            </tr>
            <tr>
                <th>Luis Segura</th>
                <th>@Model.Semanal(Model.Base21)</th>
                <th>No Aplica</th>
                <th>@Model.Deducciones(Model.Semanal(Model.Base21), Model.Comisiones(Model.Ventas21))</th>
                <th>@Model.Neto(Model.Semanal(Model.Base21), Model.Comisiones(Model.Ventas21), (Model.Deducciones(Model.Semanal(Model.Base21), Model.Comisiones(Model.Ventas21))))</th>
            </tr>

        </table>
        <p>@Html.ActionLink("Aceptar","Index")</p>
    </div>
</body>
</html>
