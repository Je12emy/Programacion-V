@model Salarios.Models.Datos
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ver</title>
</head>
<body style="background-color:black;color:white">
    <div> 
        <h1 style="text-align:center ">Datos de Planilla</h1>
        <style>table, th, td {border: 1px solid}</style>
        <h2>Libreria El Cinco Menos</h2>
